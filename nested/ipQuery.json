{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "publicIPAddressName": {
      "type": "string",
      "metadata": {
        "description": "Ip address name."
      },
      "defaultValue": "doliud2publicip1"
    }
  },
  "variables": {},
  "resources": [],
  "outputs": {
    "ip": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Network/publicIpAddresses/',parameters('publicIPAddressName')),'2015-06-15').ipAddress]"
    }
  }
}